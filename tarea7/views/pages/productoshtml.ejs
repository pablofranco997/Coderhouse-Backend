<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('../partials/head'); %>
    <script src="/socket.io/socket.io.js"></script>
    <script src="./showProducts.js"></script>
</head>
<body class="container">
    <header>
        <%- include('../partials/header'); %>
    </header>
    
    <main>
        <h3>Buscar producto por ID</h3>
        <form onsubmit="showProducts(this)">
            <input type="number" id="productID" placeholder="ID del producto">
            <p>(Para ver todos, deje la caja en blanco)</p>
            <input type="submit" value="Ver producto(s)">
        </form>
        <br>
        <div class="jumbotron">
            <table class="table">
                <thead>
                    <tr>
                      <th scope="col">#</th>
                      <th scope="col">Nombre</th>
                      <th scope="col">precio</th>
                    </tr>
                </thead>
                <tbody id="products">
                </tbody>
            </table>
        </div>
    </main>

    <footer>
        <%- include('../partials/footer'); %>
    </footer>
</body>
</html>