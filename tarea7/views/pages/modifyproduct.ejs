<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('../partials/head'); %>
</head>
<body class="container">
    <header>
        <%- include('../partials/header'); %>
        <script src="/socket.io/socket.io.js"></script>
        <script src="./modifyProduct.js"></script>
    </header>
    
    <main>
        <h3>Modificar producto por ID</h3>
        <form onsubmit="modifyProducts(this)">
            <input type="number" id="_id" placeholder="ID del producto a modificar">
            <p>Modificar:</p>
            <input type="text" id="nombre" placeholder="Nombre del producto">
            <input type="number" id="precio" placeholder="Ejemplo: 1500">
            <input type="submit" value="Modificar">
        </form>
        <br>
        <div class="jumbotron">
            <table class="table">
                <thead>
                    <tr>
                      <th scope="col">#</th>
                      <th scope="col">Nombre</th>
                      <th scope="col">precio</th>
                    </tr>
                </thead>
                <tbody id="products">
                </tbody>
            </table>
        </div>
    </main>

    <footer>
        <%- include('../partials/footer'); %>
    </footer>
</body>
</html>